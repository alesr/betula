{{define "title"}}Tags{{end}}
{{define "body"}}
	<main class="mv-categories">
		<article>
			<h2 class="p-name">Tags</h2>
			{{if .Categories}}
				<ol>
					{{range .Categories}}
						<li class="mv-category">
							<a href="/cat/{{.Name}}" class="u-url"><span class="p-name">{{.Name}}</span></a>
							<span class="mv-count">{{.PostCount}}</span> post{{if gt .PostCount 1}}s{{end}}
						</li>
					{{end}}
				</ol>
			{{else}}
				<p>No tags.</p>
			{{end}}
		</article>
	</main>
{{end}}
