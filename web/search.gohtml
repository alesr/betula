{{define "title"}}Search: {{.Query}}{{end}}
{{define "body"}}{{$authed := .Authorized}}
<main class="h-feed">
	<article>
		<h2 class="p-name">Search: {{.Query}}</h2>{{$cnt := len .Posts}}
		<p><span class="mv-count">{{$cnt}}</span> bookmark{{if ne $cnt 1}}s{{end}} match the query.</p>
	</article>
    {{range .Posts}}
		<article class="h-entry">
            {{if $authed}}
                {{template "post buttons fragment" .}}
            {{end}}
			<h3 class="p-name"><a class="u-url" href="/{{.ID}}">{{.Title}}</a></h3>
            {{template "post main fragment" .}}
		</article>
    {{end}}
</main>
{{end}}