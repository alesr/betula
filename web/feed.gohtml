{{define "title"}}Betula É‘{{end}}
{{define "body"}}
	<main>
		<h2>Saved links</h2>
        {{range .YieldAllPosts}}
			<article class="post">
				<h3><a href="/{{.ID}}">{{.Title}}</a></h3>
				{{template "post fragment" .}}
			</article>
		{{else}}
	        <p>No links saved. <a href="/add-link">Add link</a>.</p>
        {{end}}
	</main>
{{end}}