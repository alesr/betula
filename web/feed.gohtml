
<!doctype html>
<html lang="en">
<head>
	<title>Betula alpha</title>
</head>
<body>
<main>
	<h1>Betula</h1>
	<h2>Add link</h2>
	<form method="post" action="/add-link">
		<p>
			<label for="link-url">URL</label>
			<input type="text" id="link-url" name="url" required>
		</p>
		<p>
			<label for="link-title">Title</label>
			<input type="text" id="link-title" name="title" required>
		</p>
		<input type="submit">
	</form>
	<h2>Saved links</h2>
	{{range .YieldAllPosts}}
		<article>
			<h3>{{.Title}}</h3>
			<p><a href="{{.URL}}">{{.URL}}</a></p>
		</article>
	{{end}}
</main>
</body>
</html>