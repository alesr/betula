{{define "title"}}Link: {{.Post.Title}}{{end}}
{{define "body"}}
	<main>
		<article class="post">
			<h2><a href="/{{.Post.ID}}">{{.Post.Title}}</a></h2>
			{{if .Authorized}}
				{{template "post authorized fragment" .Post}}
			{{else}}
				{{template "post unauthorized fragment" .Post}}
			{{end}}
		</article>
	</main>
{{end}}